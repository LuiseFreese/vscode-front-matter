{
  "name": "vscode-front-matter",
  "private": false,
  "devDependencies": {
    "lerna": "^4.0.0"
  },
  "scripts": {
    "dev": "lerna run dev --stream",
    "site:delete": "rm -rf ./solutions/extension/site",
    "site:create": "mkdir ./solutions/extension/site",
    "site:copy": "cp -R ./solutions/webview/.next ./solutions/extension/site/.next",
    "ext:copy": "cp ./solutions/extension/*.vsix ./",
    "build": "lerna run build && npm run site:delete && npm run site:create && npm run site:copy && lerna run vscode:package && npm run ext:copy"
  }
}
